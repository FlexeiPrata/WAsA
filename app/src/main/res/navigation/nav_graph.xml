<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/chFragment">
    <fragment
        android:id="@+id/menuFragment"
        android:name="com.flexship.wordsassociations.presentation.views.MenuFragment"
        android:label="MenuFragment">
        <action
            android:id="@+id/action_menuFragment_to_mainFragment3"
            app:destination="@id/mainFragment3"
            />
    </fragment>
    <fragment
        android:id="@+id/mainFragment3"
        android:name="com.flexship.wordsassociations.presentation.views.MainFragment"
        android:label="MainFragment" />
    <fragment
        android:id="@+id/chFragment"
        android:name="com.flexship.wordsassociations.presentation.views.ChFragment"
        android:label="ChFragment">
        <action
            android:id="@+id/action_chFragment_to_menuFragment"
            app:destination="@id/menuFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right"
            />
        <action
            android:id="@+id/action_chFragment_to_gameFragment"
            app:destination="@id/gameFragment"
            app:enterAnim="@anim/slide_left"
            app:exitAnim="@anim/wait_anim"
            app:popEnterAnim="@anim/wait_anim"
            app:popExitAnim="@anim/slide_right"/>
    </fragment>
    <fragment
        android:id="@+id/gameFragment"
        android:name="com.flexship.wordsassociations.presentation.views.GameFragment"
        android:label="GameFragment" />
</navigation>