<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.WordsAssociations" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_navy</item>
        <item name="colorPrimaryVariant">@color/dark_navy</item>
        <item name="colorOnPrimary">@color/tangerine</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blueberry</item>
        <item name="colorSecondaryVariant">@color/blueberry</item>
        <item name="colorOnSecondary">@color/daffodil</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="chipStyle">@style/flexchips</item>
    </style>

    <style name="flexchips" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="shapeAppearanceOverlay">@style/shape_app</item>
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="entrychip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/dark_navy</item>
        <item name="android:textColor">@color/daffodil</item>
        <item name="fontFamily">@font/roboto_light</item>
        <item name="android:textSize">@dimen/_9ssp</item>
    </style>

    <style name="flex_button" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="strokeColor">@color/box_color</item>
    </style>


    <style name="shape_app">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">6dp</item>
    </style>

    <style name="shape_hard">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">6dp</item>
        <item name="cornerSizeTopRight">6dp</item>
    </style>

</resources>